datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  orders      Order[]
  price       Float?
  stock       Int?
  updatedAt   DateTime @updatedAt
}

model Order {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  orderDate  DateTime?
  product    Product?  @relation(fields: [productId], references: [id])
  productId  String?
  quantity   Int?
  totalPrice Float?
  updatedAt  DateTime  @updatedAt
}
